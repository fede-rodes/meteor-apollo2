{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "allowImportExportEverywhere": true
  },
  "plugins": ["prettier"],
  "settings": {
    "import/resolver": "meteor"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      { "singleQuote": true, "trailingComma": "es5", "printWidth": 100 }
    ]
  }
}
